<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управління готелем" Height="600" Width="900">
    <DockPanel>
        <!-- Main Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Вихід" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Гості">
                <MenuItem Header="Управління гостями" Click="GuestsManagement_Click"/>
                <MenuItem Header="Додати гостя" Click="AddGuest_Click"/>
            </MenuItem>
            <MenuItem Header="Бронювання">
                <MenuItem Header="Управління бронюваннями" Click="BookingsManagement_Click"/>
                <MenuItem Header="Додати бронювання" Click="AddBooking_Click"/>
            </MenuItem>
            <MenuItem Header="Оплата">
                <MenuItem Header="Оплата бронювання" Click="Payment_Click"/>
            </MenuItem>
            <MenuItem Header="Звіти">
                <MenuItem Header="Звіт про прибутки" Click="RevenueReport_Click"/>
                <MenuItem Header="Звіт про завантаженість номерів" Click="OccupancyReport_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Система управління готелем" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Головна панель" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Dashboard -->
            <TabControl Grid.Row="1" Margin="10">
                <TabItem Header="Гості">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <DataGrid x:Name="GuestsDataGrid" AutoGenerateColumns="True" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                  Margin="5" Grid.Row="0"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="5">
                            <Button Content="Додати" Width="100" Margin="5" Click="AddGuest_Click"/>
                            <Button Content="Редагувати" Width="100" Margin="5" Click="EditGuest_Click"/>
                            <Button Content="Видалити" Width="100" Margin="5" Click="DeleteGuest_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Бронювання">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <DataGrid x:Name="BookingsDataGrid" AutoGenerateColumns="True" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                  Margin="5" Grid.Row="0"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="5">
                            <Button Content="Додати" Width="100" Margin="5" Click="AddBooking_Click"/>
                            <Button Content="Редагувати" Width="100" Margin="5" Click="EditBooking_Click"/>
                            <Button Content="Видалити" Width="100" Margin="5" Click="DeleteBooking_Click"/>
                            <Button Content="Оплатити" Width="100" Margin="5" Click="Payment_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Статистика">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="10">
                            <Button Content="Звіт про прибутки" Width="150" Height="30" Margin="10" Click="RevenueReport_Click"/>
                            <Button Content="Звіт про завантаженість" Width="150" Height="30" Margin="10" Click="OccupancyReport_Click"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="Загальна кількість гостей:" Margin="5"/>
                                    <TextBlock x:Name="TotalGuestsTextBlock" Text="0" FontSize="20" FontWeight="Bold" Margin="5"/>
                                    
                                    <TextBlock Text="Зайняті номери:" Margin="5"/>
                                    <TextBlock x:Name="OccupiedRoomsTextBlock" Text="0" FontSize="20" FontWeight="Bold" Margin="5"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="Активні бронювання:" Margin="5"/>
                                    <TextBlock x:Name="ActiveBookingsTextBlock" Text="0" FontSize="20" FontWeight="Bold" Margin="5"/>
                                    
                                    <TextBlock Text="Дохід за поточний місяць:" Margin="5"/>
                                    <TextBlock x:Name="CurrentMonthRevenueTextBlock" Text="0" FontSize="20" FontWeight="Bold" Margin="5"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Footer -->
            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock x:Name="StatusTextBlock" Text="Готово"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock x:Name="DateTimeTextBlock" Text=""/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>