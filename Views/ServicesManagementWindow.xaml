<Window x:Class="HotelManagementSystem.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управління послугами" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ServicesDataGrid" AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                  Margin="10" Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ServiceId}" Width="50"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Ціна" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Додати" Width="100" Margin="5" Click="AddService_Click"/>
            <Button Content="Редагувати" Width="100" Margin="5" Click="EditService_Click"/>
            <Button Content="Видалити" Width="100" Margin="5" Click="DeleteService_Click"/>
            <Button Content="Замовити для гостя" Width="150" Margin="5" Click="OrderForGuest_Click"/>
        </StackPanel>
    </Grid>
</Window>