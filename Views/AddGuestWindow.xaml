<Window x:Class="HotelManagementSystem.AddGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати гостя" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Ім'я гостя:"/>
            <TextBox x:Name="FullNameTextBox"/>
            
            <Label Content="Контактні дані:"/>
            <TextBox x:Name="ContactInfoTextBox"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Зберегти" Width="80" Margin="5" Click="SaveGuest_Click"/>
                <Button Content="Скасувати" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>