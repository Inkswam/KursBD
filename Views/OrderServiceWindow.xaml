<Window x:Class="HotelManagementSystem.OrderServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Замовлення послуги" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Послуга:"/>
            <TextBlock x:Name="ServiceNameTextBlock" FontWeight="Bold"/>
            
            <Label Content="Ціна:"/>
            <TextBlock x:Name="ServicePriceTextBlock" FontWeight="Bold"/>
            
            <Label Content="Гість:"/>
            <ComboBox x:Name="GuestComboBox"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Замовити" Width="100" Margin="5" Click="OrderService_Click"/>
                <Button Content="Скасувати" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>