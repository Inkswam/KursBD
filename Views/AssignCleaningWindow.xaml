<Window x:Class="HotelManagementSystem.AssignCleaningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Призначення прибирання" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Працівник:"/>
            <TextBlock x:Name="StaffNameTextBlock" FontWeight="Bold"/>
            
            <Label Content="Номер для прибирання:"/>
            <ComboBox x:Name="RoomComboBox" Margin="0,5,0,10"/>
            
            <Label Content="Дата прибирання:"/>
            <DatePicker x:Name="CleaningDatePicker" Margin="0,5,0,10"/>
            
            <Label Content="Час прибирання:"/>
            <ComboBox x:Name="CleaningTimeComboBox" Margin="0,5,0,10">
                <ComboBoxItem Content="8:00"/>
                <ComboBoxItem Content="9:00"/>
                <ComboBoxItem Content="10:00"/>
                <ComboBoxItem Content="11:00"/>
                <ComboBoxItem Content="12:00"/>
                <ComboBoxItem Content="13:00"/>
                <ComboBoxItem Content="14:00"/>
                <ComboBoxItem Content="15:00"/>
                <ComboBoxItem Content="16:00"/>
            </ComboBox>
            
            <Label Content="Тип прибирання:"/>
            <ComboBox x:Name="CleaningTypeComboBox" Margin="0,5,0,10">
                <ComboBoxItem Content="Щоденне"/>
                <ComboBoxItem Content="Після виселення"/>
                <ComboBoxItem Content="Генеральне"/>
            </ComboBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Призначити" Width="100" Margin="5" Click="AssignCleaning_Click"/>
                <Button Content="Скасувати" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>