<Window x:Class="HotelManagementSystem.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управління персоналом" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="StaffDataGrid" AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                  Margin="10" Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding StaffId}" Width="50"/>
                <DataGridTextColumn Header="П.І.Б." Binding="{Binding FullName}" Width="200"/>
                <DataGridTextColumn Header="Посада" Binding="{Binding Position}" Width="150"/>
                <DataGridTextColumn Header="Графік роботи" Binding="{Binding WorkSchedule}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Додати" Width="100" Margin="5" Click="AddStaff_Click"/>
            <Button Content="Редагувати" Width="100" Margin="5" Click="EditStaff_Click"/>
            <Button Content="Видалити" Width="100" Margin="5" Click="DeleteStaff_Click"/>
            <Button Content="Призначити прибирання" Width="150" Margin="5" Click="AssignCleaning_Click"/>
        </StackPanel>
    </Grid>
</Window>