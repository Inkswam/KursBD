<Window x:Class="HotelManagementSystem.RoomOccupancyReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Звіт про завантаженість номерів" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Період:"/>
            <DatePicker x:Name="StartDatePicker"/>
            <DatePicker x:Name="EndDatePicker"/>

            <Button Content="Згенерувати звіт" Click="GenerateReport_Click" Margin="5"/>
            
            <DataGrid x:Name="OccupancyDataGrid" AutoGenerateColumns="True" Height="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>