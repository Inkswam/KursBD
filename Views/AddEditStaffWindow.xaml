<Window x:Class="HotelManagementSystem.AddEditStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати працівника" Height="250" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="П.І.Б.:"/>
            <TextBox x:Name="FullNameTextBox"/>
            
            <Label Content="Посада:"/>
            <ComboBox x:Name="PositionComboBox">
                <ComboBoxItem Content="Адміністратор"/>
                <ComboBoxItem Content="Прибиральник"/>
                <ComboBoxItem Content="Портьє"/>
                <ComboBoxItem Content="Охоронець"/>
            </ComboBox>
            
            <Label Content="Графік роботи:"/>
            <ComboBox x:Name="WorkScheduleComboBox">
                <ComboBoxItem Content="8:00-16:00"/>
                <ComboBoxItem Content="16:00-24:00"/>
                <ComboBoxItem Content="24:00-8:00"/>
                <ComboBoxItem Content="Вихідний"/>
            </ComboBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Зберегти" Width="80" Margin="5" Click="SaveStaff_Click"/>
                <Button Content="Скасувати" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>