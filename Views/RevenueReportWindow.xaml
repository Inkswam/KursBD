<Window x:Class="HotelManagementSystem.RevenueReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Звіт про прибутки" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Початкова дата:"/>
            <DatePicker x:Name="StartDatePicker"/>

            <Label Content="Кінцева дата:"/>
            <DatePicker x:Name="EndDatePicker"/>

            <Button Content="Згенерувати звіт" Click="GenerateReport_Click" Margin="5"/>
            <Button Content="Експортувати у CSV" Click="ExportToCsv_Click" Margin="5"/>
 
            <DataGrid x:Name="RevenueDataGrid" AutoGenerateColumns="True" Height="200" Margin="5"/>

            <Label Content="Загальний дохід:"/>
            <TextBlock x:Name="TotalRevenueTextBlock" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>