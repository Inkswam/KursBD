<Window x:Class="HotelManagementSystem.AddBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати бронювання" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Гість:"/>
            <ComboBox x:Name="GuestComboBox"/>
            
            <Label Content="Категорія номера:"/>
            <ComboBox x:Name="RoomCategoryComboBox"/>

            <Label Content="Дата заїзду:"/>
            <DatePicker x:Name="CheckInDatePicker"/>

            <Label Content="Дата виїзду:"/>
            <DatePicker x:Name="CheckOutDatePicker"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Зберегти" Width="80" Margin="5" Click="SaveBooking_Click"/>
                <Button Content="Скасувати" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>