<Window x:Class="HotelManagementSystem.AddEditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати послугу" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Назва послуги:"/>
            <TextBox x:Name="NameTextBox"/>
            
            <Label Content="Опис:"/>
            <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
            
            <Label Content="Ціна:"/>
            <TextBox x:Name="PriceTextBox"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Зберегти" Width="80" Margin="5" Click="SaveService_Click"/>
                <Button Content="Скасувати" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>